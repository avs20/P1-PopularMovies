<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.siolabs.ashutoshsingh.p1_popularmovies.MovieDetailsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:id="@+id/detail_movie_title"
        android:textSize="32dp"
        android:background="#ffff00"
        android:textAlignment="viewStart"
        android:gravity="center_vertical"
        android:paddingLeft="36dp"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_movie_title"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_movie_poster"
            android:padding="16dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/detail_movie_poster"
            android:layout_alignBottom="@+id/detail_movie_poster"
            android:id="@+id/detail_movie_container"
            android:paddingLeft="24dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/detail_movie_year"
                android:textSize="32sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/detail_movie_length"
                android:textSize="28sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/detail_movie_rating"
                android:textSize="20sp"
                />

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_movie_overview"
            android:layout_below="@id/detail_movie_poster"
            android:padding="16dp"

            />





    </RelativeLayout>




</RelativeLayout>
